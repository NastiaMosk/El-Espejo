    include pug/includes/header.pug
    .cover#home
      .cover__filter
      .cover-text
        h1.cover-text__title Some Name
        h2.cover-text__subtitle photographer
    .page-content
      .biography.block#myStory
        h2.secondary-heading My story
        p.text.animation-element.slide-left.
          Lorem Lipsum dolor sit amet consectetur
          adipisicing elit. Dolores laboriosam
